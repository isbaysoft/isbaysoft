<table class="table table-striped table-bordered table-condensed">
<thead>
  <th class="span1">№</th>
  <th class="span1"><%= check_box_tag("groups", false, false, :onclick=>"setCheckBoxes(this,'ids[]')") %></th>
  <th class="span2"><%= t(:button_link_to_menu_items)  %></th>
  <th class="span4"><%= sortable('Название','title') %></th>
  <th class="span3"><%= sortable('Доступ','access_level')  %></th>
  <th class="span1"><%= sortable('Опубликовано','published') %></th>
</thead>
<tbody>
<% @menus.map do |row| %>zzz
  <tr>
    <th><%= row.id -%></th>
    <th><%= check_box_tag('ids[]',row.id) -%></th>
    <th><%= link_to( image_tag('admin/icons/24/edit_form.png', :alt => 'edit menu items', :title => t(:button_edit)),
             admin_menu_menu_items_url(row)) %></th>
    <td><%= link_to(row.title, edit_admin_menu_url(row.id)) %></td>
    <td><%= h row.rule.name %></td>
    <th><%= check_box_tag("published_#{row.id}",row.published,row.published,:disabled => true) -%></th>
  </tr>
<% end %>
</tbody>
</table>