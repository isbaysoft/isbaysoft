<%= render :partial => 'shared/admin/panel_table', :locals => {:table_collection => @menus} %>
<%= form_for 'tasks', :url => admin_menu_url('destroy'), :html =>{:method => :delete, :name=>'adminForm'} do -%>
  <%= hidden_field_tag 'task', 'search' -%>
  <%= @menus.blank? ? nodata : render(:partial => 'table') %>
  <% content_for :toolbar_additional do %>
    <%= btn(:icon_class=>'icon-eye-close',
      :class => 'btn-toolbar',
      :caption => t(:button_show),
      :title => t(:button_show),
      :onclick=>"submitaction('#{publish_admin_menu_url(0)}')") -%>
    <%= btn(:icon_class=>'icon-eye-close',
      :class => 'btn-toolbar',
      :caption => t(:button_hide),
      :title => t(:button_deactivate_user),
      :onclick=>"submitaction('#{unpublish_admin_menu_url(0)}')") -%>
  <% end %>
  <%= render :partial =>'shared/admin/toolbar_controller', :locals => { :paginated_rows => @menus, :icon_class => 'icon_menu_48' } %>
<% end %>
