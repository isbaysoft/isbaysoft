<%#= Menus controller %>
<%= roundbox2 do -%>
 <%= render :partial => 'shared/admin/panel_table', :locals => {:per_page => @menus.per_page} %>
  <%= form_for 'tasks', :url => menu_url('destroy'), :html =>{:method => :delete, :name=>'adminForm'} do -%>
    <%= hidden_field_tag 'task', 'search' -%>
    <% unless @menus.blank? %>
      <%= render :partial => 'table' %>
    <% else %>
      <%= nodata %>
    <% end %>
    <% content_for :toolbar_additional do %>
      <%= btn(:icon_class=>'icon_publish_32',
        :caption => t(:button_show),
        :title => t(:button_show),
        :onclick=>"submitaction('#{publish_menu_url(0)}')") -%>
      <%= btn(:icon_class=>'icon_unpublish_32',
        :caption => t(:button_hide),
        :title => t(:button_deactivate_user),
        :onclick=>"submitaction('#{unpublish_menu_url(0)}')") -%>
    <% end %>
    <%= render :partial =>'shared/admin/toolbar_controller', :locals => { :paginated_rows => @menus, :icon_class => 'icon_menu_48' } %>
  <% end %>
<% end %>
