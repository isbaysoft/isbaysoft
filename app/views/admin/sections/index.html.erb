<%#= Section controller %>
<% roundbox2 do -%>
 <%= render :partial => 'shared/admin/panel_table', :locals => {:per_page => @sections.per_page} %>
  <% form_for 'tasks', :url => section_url('destroy'), :html =>{:method => :delete, :name=>'adminForm'} do -%>
    <%= hidden_field_tag 'task', 'search' -%>
    <% show_model_table(@sections,
      [['name','Название'],['description','Описание']] , :class => 'grid',
      :cellpadding => 0, :cellspacing => 0, :border => 0,
      :numeration => '№', :checkbox => 'ids[]'
    ) do |row,counter|  -%>
      <tr class="<%= cycle('odd','even') %>"<%= 'id="after_edit"' if flash[:edited].to_s == row.id.to_s %> >
        <td width="2%"><%= counter -%></td>
        <td width="2%"><%= check_box_tag('ids[]',row.id) -%></td>
        <td><%= link_to(row.name.to_sym, edit_section_url(row.id)) %></td>
        <td><%= row.description.to_sym %></td>
      </tr>
    <% end %>
    <%= render :partial =>'shared/admin/toolbar_controller', :locals => { :paginated_rows => @sections } %>
  <% end %>
<% end %>
<%= javascript_tag(visual_effect(:highlight,:after_edit, :duration => 1.3)) if flash[:edited] %>
