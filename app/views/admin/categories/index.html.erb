<%# Category controller%>
<% roundbox2 do -%>
  <%= render :partial => 'shared/admin/panel_table', :locals => {:per_page => @categories.per_page} %>
  <% form_for 'tasks', :url => category_url('destroy'), :html =>{ :method => :delete, :name=>'adminForm'} do -%>
  <%= hidden_field_tag 'task','0' %>
  <table class="grid" cellspacing="0" cellpadding="0" border="0">
    <thead>
      <th>№</th>
      <th><%= check_box_tag("groups", false, false, :onclick=>"setCheckBoxes(this,'ids[]')") %></th>
      <th><%= sortable('Название','name') %></th>
      <th><%= sortable('Описание','description') %></th>
      <th><%= sortable('Раздел','section_name') %></th>
    </thead>
    <tbody>
    <% @categories.map do |row| %>
      <tr class="<%= tr_cycle_wrong row %>"<%= 'id="after_edit"' if flash[:edited].to_s == row.id.to_s  -%> >
        <td width="2%"><%= row.id -%></td>
        <td width="2%"><%= check_box_tag('ids[]',row.id) %></td>
        <td><%= link_to(row.name.to_s, edit_category_url(row.id)) -%></td>
        <td><%= row.description.to_s %></td>
        <td><%= row.section_name.to_s %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
    <%= render :partial =>'shared/admin/toolbar_controller', :locals => { :paginated_rows => @categories, :icon_class => 'icon_folder_document_48' } %>
  <% end %>
<% end %>
<%= javascript_tag(visual_effect(:highlight,:after_edit, :duration => 1.3)) if flash[:edited] %>