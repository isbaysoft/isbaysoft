<table class="table table-striped table-bordered table-condensed">
  <thead>
    <th class="mark">#</th>
    <th class="mark"><%= check_box_tag("groups", false, false, :onclick=>"setCheckBoxes(this,'ids[]')") %></th>
    <th><%= sortable('Название','name') %></th>
    <th><%= sortable('Раздел','section_name') %></th>
  </thead>
  <tbody>
  <% @categories.map do |row| %>
    <tr>
      <th><%= row.id -%></th>
      <th><%= check_box_tag('ids[]',row.id) %></th>
      <td><%= link_to(row.name.html_safe, edit_admin_category_url(row.id)) -%></td>
      <td><%= row.try(:'section_name') %></td>
    </tr>
  <% end %>
  </tbody>
</table>