<table class="grid" cellspacing="0" cellpadding="0" border="0">
<thead>
  <th>№</th>
  <th><%= check_box_tag("groups", false, false, :onclick=>"setCheckBoxes(this,'ids[]')") %></th>
  <th><%= sortable('Название','name') %></th>
  <th><%= sortable('Позиция','position') %></th>
  <th><%= sortable('Автор','user_login') %></th>
  <th><%= sortable('Создан','created_at') %></th>
</thead>
<tbody>
<% @contents.map do |row| %>
  <tr class="<%= cycle('odd','even') %>"<%= 'id="after_edit"' if flash[:edited].to_s == row.id.to_s -%> >
    <th width="2%"><%= row.id -%></th>
    <th width="2%"><%= check_box_tag('ids[]',row.id) -%></th>
    <td><%= link_to(row.name, edit_admin_content_url(row.id)) -%></td>
    <td><%= row.position -%></td>
    <td><%= row.user.email -%></td>
    <td><%= row.created_at.to_formatted_s(:long) -%></td>
  </tr>
<% end %>
</tbody>
</table>