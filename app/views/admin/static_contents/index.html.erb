<%= render :partial => 'shared/admin/panel_table', :locals => {:table_collection => @contents} %>
<%= form_for 'tasks', :url => admin_content_url('destroy'), :html =>{ :method => :delete, :name=>'adminForm'} do -%>
  <%= hidden_field_tag 'task','0' %>
