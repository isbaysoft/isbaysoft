<%# StaticContent controller%>
<% roundbox2 do -%>
 <%= render :partial => 'shared/admin/panel_table', :locals => {:per_page => @contents.per_page} -%>
  <% form_for 'tasks', :url => content_url('destroy'), :html =>{:method => :delete, :name=>'adminForm'} do -%>
    <%= hidden_field_tag 'task','search' -%>
    <% show_model_table(@contents,
      [['name','Название'],
        ['position','Позиция'],
        ['user_login','Автор'],
        ['created_at','Создан']] , :class => 'grid',
      :cellpadding => 0, :cellspacing => 0, :border => 0,
      :numeration => '№', :checkbox => 'ids[]'
    ) do |row,counter|  -%>
      <tr class="<%= cycle('odd','even') %>"<%= 'id="after_edit"' if flash[:edited].to_s == row.id.to_s -%> >
        <td width="2%"><%= counter -%></td>
        <td width="2%"><%= check_box_tag('ids[]',row.id) -%></td>
        <td><%= link_to(row.name, edit_content_url(row.id)) -%></td>
        <td><%= row.position -%></td>
        <td><%= row.user.email -%></td>
        <td><%= row.created_at.to_formatted_s(:long) -%></td>
      </tr>
    <% end %>
    <%= render :partial =>'shared/admin/toolbar_controller', :locals => { :paginated_rows => @contents, :icon_class => 'icon_content_48' } %>
  <% end %>
<% end %>
<%= javascript_tag(visual_effect(:highlight,:after_edit, :duration => 1.3)) if flash[:edited] %>
