<%= hidden_field_tag 'fileDelIds' %>
<div class="btn-toolbar">
  <div class="btn-group">
    <a class="btn" href="#" id="select_local_files_id"><i class="icon-folder-open"></i> <%= t(:label_select) %></a>
    <a class="btn" href="#" id="upload_files_id"><i class="icon-upload"></i> <%= t(:label_upload) %></a>
  </div>
  <div class="btn-group">
    <a class="btn" href="#" id="file_delete_id"><i class="icon-trash"></i> <%= t(:button_delete) %></a>
    <button class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
    <ul class="dropdown-menu">
      <li><%= link_to t(:button_delete_all), '#', :id => 'screenshot_delete_all_id', :confirm => 'Are you sure?' %>
    </ul>
  </div>
  <div class="btn-group">
    <a class="btn" href="#" id="selected_id"><i class="icon-trash"></i> <%= t(:label_selected) %><span id="selected_count"></span></a>
    <button class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
    <ul class="dropdown-menu">
      <li><%= link_to t(:button_deselect), '#', :id => 'deselect_id' %>
      <li><%= link_to t(:button_inverse_select), '#', :id => 'inverse_select_id' %>  
    </ul>
  </div>
</div>
<hr>
<table class="table table-striped table-bordered table-condensed" id="filelist_table_id">
<thead>
  <th><%= t(:field_filename) %></th>
  <th><%= t(:field_filesize) %></th>
  <th><%= t(:field_filetype) %></th>
  <th></th>
</thead>
<tbody>
<% @document.document_files.map do |row| %>
<tr>
  <td><%= h(row.filelist.f_file_name) %></td>
  <td><%= number_to_human_size(row.filelist.f_file_size) %></td>
  <td><%= h(row.filelist.f_content_type) %></td>
  <td><%= link_to_function '', "NotifyFileDeleted(#{row.id})", :class => 'toolbar_button16 icon_trash_16' %></td>
</tr>
<% end if @document.document_files.present? %>
</tbody>
</table>
url : '<%= admin_document_document_files_url(@document) unless @document.new_record? %>',
<%= render :partial => 'admin/filelists/plupload', :locals => {} %>
