<ul class="thumbnails">
<% @document.screenshots.map do |img| %>
  <li class="span" id="img<%= img.id %>">
    <div class="thumbnail">
      <a href="#" class="btn" id="d<%= img.id %>"><i class="icon-trash"></i></a>
