        <h5><%= img.screenshot_file_name  %></h5>
      </div>
    </div>
  </li>
<% end if @document.screenshots.present? %>
</ul>


<script type="text/javascript">
  $(function() {
    authtoken = $("input[name=authenticity_token]").val();
    var uploader = new plupload.Uploader({
      runtimes : 'gears,html5,flash,silverlight',
      browse_button : 'screenshot-select-id',
      max_file_size : '10mb', // TODO: size from model
      url : '<%= screenshot_admin_document_url unless @document.new_record? %>',
      flash_swf_url : '<%= javascript_path '/plupload/plupload.flash.swf' %>',
      silverlight_xap_url : '<%= javascript_path '/plupload/plupload.silverlight.xap' %>',
      filters : [{title : "Image files", extensions : "jpg,gif,png"}],
      multipart_params : {
        'format': 'json',
        authenticity_token: authtoken
      },
      file_data_name: 'document[screenshot]'
    });

    $('#screenshot-upload-id').click(function(e) {
      uploader.start();
      e.preventDefault();
    });

    uploader.init();

    uploader.bind('FilesAdded', function(up, files) {
      $.each(files, function(i, file) {
        $("#screenshot_add_template").tmpl(file).fadeIn().appendTo(".thumbnails");
      });
      up.refresh(); // Reposition Flash/Silverlight
    });

    uploader.bind('UploadProgress', function(up, file) {
      var size = plupload.formatSize(file.size)
      var loaded = plupload.formatSize(file.loaded)
      if ($('#pre_' + file.id + ' span').length == 0) {
        $('#pre_' + file.id).prepend('<span class="label label-info">0%</span>');
      }
      $('#pre_' + file.id + ' span').html(file.percent + '%');
    });
    

    uploader.bind('Error', function(up, err) {
      up.refresh(); // Reposition Flash/Silverlight
    });

    uploader.bind('FileUploaded', function(up, file, info) {
      var response = JSON.parse(info['response']);
      var url = JSON.parse(response['url']);
      $('#pre_'+file.id+' a.btn').after('<img id="scr_'+response['id']+'" class="overloadimg" src='+url+'>');
      $('#scr_'+response['id']).animate({opacity: 1.0}, 500);
      $('#pre_' + file.id + ' span').remove();
      $('.thumbnail a.btn').attr('onclick','').attr('id',response['id']);;
      // $('#scr_'+response['id']).removeClass('overloadimg');
      // $('#pre_' + file.id + ' pre').remove();
    });
  });

  $(document).ready(function() {
    //  Botton: Remove image
    
    $('.thumbnail a.btn').live('click',function(e) {
      var val = $(this).attr('id').replace('d','');  
      $("#imgDelIds").toggleToArray(val);
      $(this).next().toggleClass("image-overlay");
      e.preventDefault();
    });

    
    //  Button: Remove images
    $('#screenshot-delete-id').click(function(){
      $.ajax({
        url: '<%= screenshot_admin_document_url unless @document.new_record? %>',
        global: false,
        type: "DELETE",
        data: {'ids' : $('#imgDelIds').val()},
        dataType: "json",
        error: function(msg){
            alert('msg');
        },
        complete: function(msg){
          $("#imgDelIds").val('');
        },
        success: function(data, textStatus, jqXHR){
          $.each(data['ids'], function(index, value) { 
            $('#img'+value).fadeOut();
          });
        }
     });
    }); // end Button: Remove images
  }) // end document ready
</script>


