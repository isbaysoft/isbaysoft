<%= hidden_field_tag 'imgDelIds' %>
<div class="btn-toolbar">
  <div class="btn-group">
    <a class="btn" href="#" id="screenshot-select-id"><i class="icon-folder-open"></i> <%= t(:label_select) %></a>
    <a class="btn" href="#" id="screenshot-upload-id"><i class="icon-upload"></i> <%= t(:label_upload) %></a>
  </div>
  <div class="btn-group">
    <a class="btn" href="#" id="screenshot-delete-id"><i class="icon-trash"></i> <%= t(:button_delete) %></a>
    <button class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
    <ul class="dropdown-menu">
      <li><%= link_to t(:button_delete_all), '#', :id => 'screenshot-delete-all-id', :confirm => 'Are you sure?' %>
    </ul>
  </div>
</div>
<hr>
<ul class="thumbnails">
<% @document.screenshots.map do |img| %>
  <li class="span">
    <div class="thumbnail" id="<%= img.id %>">
      <a href="#" class="btn"><i class="icon-trash"></i></a>
      <%= image_tag img.screenshot.url %>
      <div class="caption">
        <h5><%= img.screenshot_file_name  %></h5>
      </div>
    </div>
  </li>
<% end if @document.screenshots.present? %>
</ul>
<script type="text/javascript">
  $(function() {
    authtoken = $("input[name=authenticity_token]").val();
    var uploader = new plupload.Uploader({
      runtimes : 'gears,html5,flash,silverlight',
      browse_button : 'screenshot-select-id',
      max_file_size : '10mb', // TODO: size from model
      url : '<%= screenshot_admin_document_url unless @document.new_record? %>',
      flash_swf_url : '<%= javascript_path '/plupload/plupload.flash.swf' %>',
      silverlight_xap_url : '<%= javascript_path '/plupload/plupload.silverlight.xap' %>',
      filters : [{title : "Image files", extensions : "jpg,gif,png"}],
      multipart_params : {
        'format': 'json',
        authenticity_token: authtoken
      },
      file_data_name: 'document[screenshot]'
    });

    $('#screenshot-upload-id').click(function(e) {
      uploader.start();
      e.preventDefault();
    });

    uploader.init();

    uploader.bind('FilesAdded', function(up, files) {
      $.each(files, function(i, file) {
        $("#screenshot_add_template").tmpl(file).fadeIn().appendTo(".thumbnails");
      });
      up.refresh(); // Reposition Flash/Silverlight
    });

    uploader.bind('Error', function(up, err) {
      up.refresh(); // Reposition Flash/Silverlight
    });

    uploader.bind('FileUploaded', function(up, file, info) {
      var response = JSON.parse(info['response']);
      var url = JSON.parse(response['url']);
      $('#'+file.id+' img').attr('src',url);
      $('#'+file.id+' a').attr('onclick','');
      $('#'+file.id).attr('id',response['id']);
    });
  });

  $(document).ready(function() {
    $('.dropdown-toggle').dropdown();

    //  Botton: Remove image
    $('.thumbnail a.btn').live('click',function(e) {
      var val = $(this).parent().attr('id');
      $("#imgDelIds").toggleToArray(val);
      $('#'+val+' img').toggleClass("image-overlay");
      e.preventDefault();
    });

    //  Button: Remove all images
    $('#screenshot-delete-all-id').click(function(){
      var a = []
      $.each($('.thumbnail'), function(i, thumbnail) {
        a.push($(thumbnail).attr('id'));
      });
      $("#imgDelIds").val(a.join(','));
      $('#screenshot-delete-id').click();
    });

    //  Button: Remove images
    $('#screenshot-delete-id').click(function(){
      $.ajax({
        url: '<%= screenshot_admin_document_url unless @document.new_record? %>',
        global: false,
        type: "DELETE",
        data: {'ids' : $('#imgDelIds').val()},
        dataType: "json",
        error: function(msg){
            alert('msg');
        },
        complete: function(msg){
          $("#imgDelIds").val('');
        },
        success: function(data, textStatus, jqXHR){
          $.each(data['ids'], function(index, value) { 
            $('#'+value).parent().fadeOut();
          });
        }
     });
    }); // end Button: Remove images
  }) // end document ready
</script>


<%= javascript_include_tag 'jquery.template.min.js' %>

<script id="screenshot_add_template" type="text/x-jquery-tmpl">
  <li class="span">
    <div class="thumbnail" id="${id}">
      <a href="#" class="btn" onclick="$(this).parent().parent().remove();false;"><i class="icon-trash"></i></a>
      <img src="/images/admin/image.png">
      <div class="caption">
        <h5>${name}</h5>
      </div>
    </div>
  </li>
</script>