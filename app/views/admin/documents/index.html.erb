<%# Document controller %>
<%= roundbox2 do -%>
  <%= render :partial => 'shared/admin/panel_table', :locals => {:table_collection => @documents} %>
  <%= form_for 'tasks', :url => admin_document_url('destroy'), :html =>{:method => :delete, :name=>'adminForm' } do -%>
    <%= hidden_field_tag 'task','0' %>
    <% unless @documents.blank? %>
      <%= render :partial => 'table' %>
    <% else %>
      <%= nodata %>
    <% end %>
    <% content_for :toolbar_additional do %>
      <%= btn(:icon_class=>'icon_publish_32',
        :caption => t(:button_show),
        :title => t(:button_show),
        :onclick=>"submitaction('#{publish_admin_document_url(0)}')") -%>
      <%= btn(:icon_class=>'icon_unpublish_32',
        :caption => t(:button_hide),
        :title => t(:button_deactivate_user),
        :onclick=>"submitaction('#{unpublish_admin_document_url(0)}')") -%>
    <% end %>
    <%= render :partial =>'shared/admin/toolbar_controller', :locals => { :paginated_rows => @documents, :icon_class => 'icon_document_48' } %>
  <% end %>
<% end %>