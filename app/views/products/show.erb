<div class="breadcrumbs">
  <span class="separator"><%= link_to 'Главная', root_url %></span>
  <span class="separator"><%= link_to 'Продукты', products_url %></span>
  <span class="active"><%= h @document.name %></span>
</div>
<div class="content_box">
  <div class="content_box_logo">
    <%= image_tag @document.logo_url, :width => 128, :align => :left, :class => 'img1' %>
    <br class="clearboth" />
    <%= render :partial => 'menu' %>
  </div>
  <div class="content_box_body">
    <div class="content_header"><h1><%= @document.name.html_safe %></h1></div>
    <div class="content_body body_product"><%= @document.description.html_safe %></div>
  </div>
</div> <!-- END product_box -->
<div class="clearboth">&nbsp;</div>
<div class="content_box_bottom">
  <%= render :partial => 'info' %>  
</div>