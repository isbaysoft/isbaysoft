<%= will_paginate @products, :prev_label => '&nbsp;',:next_label => '&nbsp;' if @products.present? %>
<div class="clearboth">&nbsp;</div>
<% @products.map do |row| %>
<div class="content_box">
  <%= image_tag row.logo_url, :align => :left, :class => 'img1' %>
  <div class="content_header"><h1><%= row.name %></h1></div>
  <div class="content_description"><%= row.short_description %></div>
</div> <!-- END product_box -->
<div class="clearboth">&nbsp;</div>
<div class="content_box_bottom">
  <div class="right">
    <%= link_to 'Узнать больше', product_url(row), :class=>'goodbutton goob_cl_orchid goob_sz_normal' %>
  </div>
</div>
<% end %>