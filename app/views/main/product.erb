<div class="content_box">
  <div class="content_box_logo">
    <%= image_tag @document.logo_url, :align => :left, :class => 'img1' %>
    <br class="clearboth"/>
    <%# if @document.menu && @document.menu.permitted.published && @document.menu.menu_items.published.present? %>
    <% if @document_menu %>
      <ul class="ul_cleared">
      <% @document_menu_items.map do |row|%>
        <li>
          <%= link_to h(row.title), 
            row.url,
            :target => MenuItem::TARGET_TYPES[row.target],
            :class => 'goodbutton goob_cl_lavender goob_sz_small goob_fixedwidth130'
          %>
        </li>
      <% end %>
      </ul>
    <% end %>
  </div>
  <div class="content_box_body">
    <div class="content_header"><h1><%= @document.name %></h1></div>
    <div class="content_body body_product"><%= @document.description %></div>
  </div>  
</div> <!-- END product_box -->
<div class="clearboth">&nbsp;</div>
<div class="content_box_bottom">
  <div class="info">
    <% if current_user && current_user.access_level < @document.access_level.to_i %>
      <span id="info_header">К сожалению, Вам запрещено cкачивать файлы</span>
    <% else %>
      <span id="info_header">Файлы доступные для скачивания</span>
    <% end %>
    <div class="clearboth">&nbsp;</div>
    <table width="100%">
    <tbody>
    <% @document.document_files.map do |row| %>
    <tr>
      <td><%= h(row.filelist.f_file_name) %></td>
      <td><%= h(number_to_human_size(row.filelist.f_file_size)) %></td>
      <td><%= h(row.filelist.f_updated_at.to_formatted_s(:short)) %></td>
      <td><%= h(row.hits.to_i) %> <span class="n">(Скачано)</span></td>
      <% if current_user && current_user.access_level >= @document.access_level.to_i %>
        <td>
          <%= link_to('Скачать', productfile_url(@document,row), :class => 'goodbutton goob_cl_goldenrod goob_sz_small') -%>
        </td>
      <% end %>
    </tr>
    <% end %>
    </tbody>
    </table>
  </div>
  <div class="clearboth">&nbsp;</div>
</div>