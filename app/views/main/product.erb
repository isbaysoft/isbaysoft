<div class="product_box">
  <%= image_tag @document.logo_url, :align => :left, :class => 'img1' %>
  <div class="product_header"><h1><%= @document.name %></h1></div>
  <div class="product_description"><%= @document.description %></div>
</div> <!-- END product_box -->
<div class="clearboth">&nbsp;</div>
<div class="product_box_bottom">
  <% if current_user && current_user.rule_id > @document.access_level.to_i %>
    <span class="green">(К сожалению, Вам запрещено cкачивать файлы)</span>
  <% end %>
  <div class="info">
    <span id="info_header">Файлы доступные для скачивания</span>
    <div class="clearboth">&nbsp;</div>
    <table width="100%">
    <tbody>
    <% @document.document_files.map do |row| %>
    <tr>
      <td><%= h(row.filelist.f_file_name) %></td>
      <td><%= h(number_to_human_size(row.filelist.f_file_size)) %></td>
      <td><%= h(row.filelist.f_updated_at.to_formatted_s(:short)) %></td>
      <td><%= h(row.hits.to_i) %> <span class="n">(Скачано)</span></td>
      <td><%= link_to('Скачать', productfile_url(@document,row), :class => 'goodbutton goob_cl_goldenrod goob_sz_small') -%></td>
    </tr>
    <% end %>
    </tbody>
    </table>
  </div>
  <div class="clearboth">&nbsp;</div>
</div>