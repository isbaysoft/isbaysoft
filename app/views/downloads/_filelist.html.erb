<div class="download_list_files" id="<%="row#{document.id}"%>" style="display:none;">
  <table width="620px;" cellspacing="0">
    <% document.document_files.map do |row| %>
    <tr class="<%=cycle 'odd','even', :name => 'rows' %>">
        <td width="300px"><%= h(row.filelist.f_file_name) %></td>
        <td width="100px"><%= h(number_to_human_size(row.filelist.f_file_size)) %></td>
        <td width="100px"><%= h(row.filelist.f_updated_at.to_formatted_s(:basic_date)) %></td>
        <td width="50px">+<%= h(row.hits.to_i) %></td>
        <td width="50px" align="right" valign="middle">
          <% if current_user.access_level >= document.access_level.to_i %>
            <%= link_to( image_tag('main/icons/16/disk.png', :title => 'Скачать') , productfile_url(document,row) ) -%>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<% reset_cycle 'rows' %>