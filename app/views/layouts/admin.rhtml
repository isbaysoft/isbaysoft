<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
  <%= stylesheet_link_tag "style2" %>
  <%= stylesheet_link_tag "layout_admin" %>
  <%= stylesheet_link_tag "icons_admin" %>
  <%= stylesheet_link_tag "corners" %>
  <%= stylesheet_link_tag "menu_main" %>
  <%= javascript_include_tag :defaults -%>
  <%= javascript_include_tag(:defaults, 'flash.js') %>
  <%= javascript_include_tag(:defaults, 'menu_main.js') %>
  <%= javascript_include_tag(:defaults, 'dialog.js') %>
  <!--[if lte IE 6]>
    <script src="/javascripts/ie/iepngfix_tilebg.js" type="text/javascript"></script>
  <![endif]-->
<title><%= $sitename %></title>
</head>
<body>
<div id="wrapper">
  <div id="header"><%= render :partial => 'layouts/admin_header' %></div>
  <%= render :partial => 'shared/admin/main_menu' %>
  <div id="content">
    <% roundbox2 do %>
       <%= yield :toolbar %>
    <% end if yield(:toolbar).present? %>
    <%= render :partial => 'shared/admin/show_cfg_errors' if @cfg_errors and @cfg_errors.count>0 %>
    <%= yield %>
  </div>
</div>
<div id="footer"><%= render :partial => 'layouts/admin_footer' %></div>
<div id="flash">
  <ul id="flash_errors" class="flash notice" style="display:none; overflow:hidden"><li>&nbsp;</li></ul>
  <ul id="flash_notice" class="flash notice" style="display:none; overflow:hidden"><li>&nbsp;</li></ul>
</div>
<%= javascript_tag "Flash.notice('#{flash[:notice]}')" unless flash[:notice].blank? %>
<%= javascript_tag "Flash.error('#{flash[:error]}')" unless flash[:error].blank? %>
<%= render :partial => 'shared/dialog' %>
<div id="loading" class="loading" style="display:none;"></div>
</body>
</html>