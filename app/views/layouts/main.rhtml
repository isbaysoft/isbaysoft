<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <title><%= $sitename %></title>
  <%= stylesheet_link_tag "layout" %>
  <%= stylesheet_link_tag "style" %>
  <%= stylesheet_link_tag "slider" %>
  <%= stylesheet_link_tag "icons_main" %>
  <%#= javascript_include_tag :defaults -%>
  <%= javascript_include_tag(['flash.js','jquery.js','kwicks.js','custom.js','easyslider.js','jquery.corner.js']) %>
  <!--[if lte IE 6]>
    <script src="/javascripts/ie/iepngfix_tilebg.js" type="text/javascript"></script>
  <![endif]-->
</head>
<body>
<a id="top"></a>
<div id="header" class="wrap">
  <div id="logo">&nbsp;</div>
  <%= render :partial => 'shared/main/sign' %>
  <%= render :partial => 'shared/main/searchbar' %>
</div>
<div class="clear">&nbsp;</div>
<div id="main_menu">
  <div class="wrap">
    <%= render :partial => 'shared/main/topmenu' %>
    <%#= render :partial => 'shared/main/section_list' %>
    <%#= render :partial => 'shared/main/admin' if current_user.present? and current_user.moderator? %>
  </div>
</div>
<div id='wrapper' class="wrap">
  <div id='container'>
    <div id='right'>
      <div class="sidebar_back_holder">
        <%= render :partial => 'shared/main/topdownloads' %>
      </div>
      <div class="sidebar_back_holder_end">&nbsp;</div>
    </div>
    <div id='center'>
      <%#= render :partial => 'shared/main/breadcrumbs' %>
      <%#= render :partial => 'shared/main/category_list' if @categories.present? %>
      <div id="content_body">
        <%= yield %>
      </div>
    </div>
    <div class="clear">&nbsp;</div>
  </div>
  <div class='clear'></div>
  <div id='spacer'></div>
</div>
<div id='footer'>
  <%= render :partial => 'shared/main/footer' %>
</div>
<div id="flash">
  <ul id="flash_errors" class="flash notice" style="display:none; overflow:hidden"><li>&nbsp;</li></ul>
  <ul id="flash_notice" class="flash notice" style="display:none; overflow:hidden"><li>&nbsp;</li></ul>
</div>
</body>
</html>