<%= javascript_include_tag(:defaults, 'ticket.js') %>
<div class="menu_header icon_ticket_32">Контакты и форма связи</div>
<div id="ticket_box">
  <div id="ticket_box_menu">
    <%= link_to_function 'Контакты', "showtab(this,'ticket_contacts')", :id => 'link_contact' -%>
    <%= link_to_function 'Отправить сообщение', "showtab(this,'ticket_sendmessage')", :id => 'link_sendmessage' -%>
    <%= link_to_function 'История сообщений', "showtab(this,'ticket_history')", :id => 'link_history' if current_user -%>
  </div>
  <div id="ticket_tabs">
    <h3 id="crumbs"></h3>
    <%= render :partial => 'ticket_history' if current_user -%>
    <%= render :partial => 'ticket_contacts' -%>
    <%= render :partial => 'ticket_sendmessage' -%>
  </div>
</div>
<script type="text/javascript">showtab($('link_contact'),"ticket_contacts");</script>
