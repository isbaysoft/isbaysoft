# coding: utf-8
<div id="loginbar">
<% if (current_user.access_level > 0) -%>
  <span class="n darksilver bold"><%= current_user.email -%></span> |
  <%= link_to('Управление', administrator_url, :class=>'n darksilver', :target=>'new') if current_user.moderator? %>
  | <%= link_to 'Выход', logout_url, :method => :delete, :class=>'n silver u' -%>
<% else %>
  <%= link_to('Регистрация', registration_url, :class=>'n') -%> | <%= link_to 'Login',login_url, :class=>'n' -%>
<% end %>
</div>
