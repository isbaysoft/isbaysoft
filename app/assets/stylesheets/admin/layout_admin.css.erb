body {
  padding-bottom: 60px;
}

/*separate*/

.toolbar_caption {
	height: 48px;	
	line-height: 48px;  
}

.btn-toolbar {
  margin-top: 8px;  
}

table > thead {background:#FAFAFA url(<%= asset_path 'admin/top-bg.gif' %>) repeat-x 0 -15px;}
table > thead th {height: 32px; vertical-align: middle !important;}
table > thead th a {color: #333333 !important;}

footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;

  min-height: 20px;
  padding: 19px;
  background-color: #f5f5f5;
  border: 1px solid #eee;
  border: 1px solid rgba(0, 0, 0, 0.05);
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
}

.icon_toolbar_caption {
    display: block;
    height: 48px;
    float: left;
    text-indent: 52px;
    background-position: 0px 0px;
    line-height: 48px;
    font-size: 16px;
}

.well-mini {
  min-height: 10px;
  padding: 6px;
  margin-bottom: 6px;
  background-color: #f5f5f5;
  border: 1px solid #eee;
  border: 1px solid rgba(0, 0, 0, 0.05);
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
}
.well-mini blockquote {
  border-color: #ddd;
  border-color: rgba(0, 0, 0, 0.15);
}

.confirmation {
    padding-left: 128px;
    text-align: left;
    vertical-align: middle;
    background: url(<%= asset_path 'admin/icons/48/help.png' %>) no-repeat left;
    background-position: 32px;
    font-weight: bold;
}

td {
  font-weight: normal;
}

.margin-bottom-none {
  margin-bottom: 0 !important;
}